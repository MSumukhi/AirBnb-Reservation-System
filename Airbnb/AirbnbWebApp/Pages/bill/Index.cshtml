<body style=" background-color:#C8998F">
<br>
<h2>List of Airbnb</h2>

@*
    buttons for create and data analysis
*@
<a class='btn btn-primary btn-sm' href='/bill/Create'>New Airbnb </a>


@*
    table displaying all the Airbnb List along with edit and delete option
*@
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>host_id</th>
            <th>host_name</th>
            <th>neighbourhood_group</th>
            <th>neighbourhood</th>
            <th>roomtype</th>
            <th>price</th>
            <th>minimum_nights</th>
            <th>number_of_reviews</th>
            <th>reviews_per_month</th>
            <th>availability_365</th>
            <th>reviews</th>
            <th>max_people</th>
            <th>children_amenities</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.bill)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.name</td>
                <td>@item.host_id</td>
                <td>@item.host_name</td>
                <td>@item.neighbourhood_group</td>
                <td>@item.neighbourhood</td>
                <td>@item.roomtype</td>
                <td>@item.price</td>
                <td>@item.minimum_nights</td>
                <td>@item.number_of_reviews</td>
                <td>@item.reviews_per_month</td>
                <td>@item.availability_365</td>
                <td>@item.reviews</td>
                <td>@item.max_people</td>
                <td>@item.children_amenities</td>



                <td>
                    <a class="btn btn-primary btn-sm" href="/bill/Edit?id=@item.Id">Edit</a>
                    <a class="btn-danger btn-sm" href="/bill/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br>
<br>

<form action="/bill/MaxPeople" method="get">
    <div class="input-group">
        <input type="text" name="dId" class="form-control" placeholder="Max">
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">Check Accommodation</button>
        </span>
    </div>
</form>
</body>